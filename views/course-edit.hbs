<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL img</label>
        <span class="helper-text" data-error="Enter URL img"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn waves-effect waves-light" type="submit">Edit
        <i class="material-icons right">edit</i>
    </button>
</form>